@using CarDealership.Models.ColorViewModels
@model CreateColorViewModel
@{
    ViewData["Title"] = "Create Color";
}

<div class="container" style="min-height:75vh;">
    <h2>Добави Цвят</h2>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label asp-for="CarColor.Name" class="form-label">Име</label>
            <input asp-for="CarColor.Name" class="form-control" />
            <span asp-validation-for="CarColor.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CarColor.Value" class="form-label">HEX Стойност</label>
            <input asp-for="CarColor.Value" class="form-control" />
            <span asp-validation-for="CarColor.Value" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Добави Цвят</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Върни се към списъка с Цветове</a>
</div>