@model IEnumerable<CarDealership.Models.CarColor>
@{
    ViewData["Title"] = "Colors List";
}

<div class="container" style="min-height:75vh;">
    <h2>Списък с Цветове</h2>
    <div class="row">
        @foreach (var color in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@color.Name</h5>
                        <div class="color-display mb-2 rounded-3" style="width:20px; height:20px; background-color: @color.Value;"></div>
                        <a href="@Url.Action("Edit", new { id = color.CarColorId })" class="btn btn-primary">Редактирай</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success d-flex align-items-center border-0" style="background-color:#3DC26A">
            Добави нов Цвят
            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" class="ps-2" viewBox="0 0 448 512"><path fill="#ffffff" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z" /></svg>
        </a>
    </div>
</div>