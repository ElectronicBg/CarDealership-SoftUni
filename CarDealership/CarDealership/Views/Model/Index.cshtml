@model IEnumerable<IGrouping<string, CarDealership.Models.Model>>

@{
    ViewData["Title"] = "Models List";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container" style="min-height:75vh;">
    <h2>Списък с Модели</h2>

    <div class="accordion" id="accordion">
        @foreach (var brandGroup in Model)
        {
            <div class="card">
                <div class="card-header" id="heading@(brandGroup.Key)">
                    <h5 class="mb-0">
                        <button class="btn border-0" data-toggle="collapse" data-target="#collapse@(brandGroup.Key)" aria-expanded="true" aria-controls="collapse@(brandGroup.Key)">
                            @brandGroup.Key
                        </button>
                    </h5>
                </div>

                <div id="collapse@(brandGroup.Key)" class="collapse" aria-labelledby="heading@(brandGroup.Key)" data-parent="#accordion">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Име</th>
                                    <th>Опции</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var carModel in brandGroup)
                                {
                                    <tr>
                                        <td>@carModel.Name</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@carModel.ModelId" class="btn btn-primary">Редактирай</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success mt-3 d-flex align-items-center border-0" style="background-color:#3DC26A">
            Добави нов Модел
            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" class="ps-2" viewBox="0 0 448 512"><path fill="#ffffff" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z" /></svg>
        </a>
    </div>
</div>
