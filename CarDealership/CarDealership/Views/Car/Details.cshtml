@using CarDealership.Helpers
@model CarDealership.Data.Car
@{
    ViewData["Title"] = "Cars Details";
}
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<div class="container mb-4" style="min-height:75vh;">
    <div class="row">
        <h5 class="card-title fw-bolder">@Model.Brand.Name @Model.Model.Name</h5>
    </div>
    <div class="d-flex gap-5">
        <div class="row col-8">
            <div id="carGalleryCarousel" class="carousel slide" data-ride="carousel" style="height: 500px; width: 800px;">
                <div class="carousel-inner">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="carousel-item @(photo == Model.Photos.First() ? "active" : "")">
                            <img src="@photo.Url" class="rounded d-block w-100" alt="Car Photo" style="height: 500px; width: 800px; object-fit: cover;" loading="lazy">
                        </div>
                    }
                </div>

                <!-- Carousel Controls -->
                <a class="carousel-control-prev" href="#carGalleryCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
                <a class="carousel-control-next" href="#carGalleryCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
            </div>
        </div>
        <!-- Car Information Section -->
        <div class="row col-4">
            <!-- Car Details Card -->
            <div class="card">
                <div class="card-body gap-1">
                    <p style="border-bottom: 1px solid #ccc;"><strong>Тип на Двигателя:</strong> @EnumHelper.GetDisplayName(Model.EngineType)</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Тип на Трансмисията:</strong> @EnumHelper.GetDisplayName(Model.TransmissionType)</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Цвят:</strong> @Model.CarColor.Name</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Област:</strong> @EnumHelper.GetDisplayName(Model.Region)</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Година на Производство:</strong> @Model.Year г.</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Пробег:</strong> @Model.Mileage км.</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Мощност:</strong> @Model.Power</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Тип на Колата:</strong> @EnumHelper.GetDisplayName(Model.CarType)</p>
                    <p style="border-bottom: 1px solid #ccc;"><strong>Състояние:</strong> @EnumHelper.GetDisplayName(Model.Condition)</p>
                    <p><strong>Цена:</strong> @Model.Price лв.</p>
                </div>
            </div>
        </div>

    </div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Върни се</a>

</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Initialize the Carousel -->
    <script>
        $(document).ready(function () {
            $('#carGalleryCarousel').carousel();
        });
    </script>
}
